<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/xxs"
        app:cardCornerRadius="@dimen/xxs"
        android:elevation="@dimen/xs">

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginEnd="@dimen/m"
            android:src="@drawable/ic_delete"
            android:contentDescription="@string/delete_btn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/xs"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitleQuiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/large_text_size"
                android:text="@string/card_title"/>

            <TextView
                android:id="@+id/tvDescQuiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_desc"/>

            <TextView
                android:id="@+id/tvTimerQuiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_timer"/>
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
</layout>
